/* components/card/card.wxss */
.whole-card{
  margin-top: -50rpx;
}
.cards{
  width:200rpx;
  height:200rpx;
  border-radius: 15rpx;
  margin: 85rpx 10rpx 10rpx 32rpx;
  float: left;
  background-color: aqua;
  position: relative;
}
.card-images{
  height: 100%;
  width: 100%;
  border-radius: 15rpx;
  position: absolute;
}
.cards-title{
  margin-top: 180rpx;
  position: absolute;
  font-size: 22rpx;
}
.cards-play{
  font-size: 23rpx;
  color: white;
  position: relative;
  text-align: end;
  margin-right: 10rpx;
  margin-top: 2rpx;
}
.play-num{
  position: relative;
  float: right;
}
.play-img{
  height:30rpx;
  width: 30rpx;
}